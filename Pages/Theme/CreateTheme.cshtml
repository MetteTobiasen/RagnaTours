@page
@model RagnaTours.CreateThemeModel
@{
}

<h1>Create Theme</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Theme.Id" class="control-label"> Id </label>
        <input asp-for="@Model.Theme.Id" class="form-control" />
        <span asp-validation-for="@Model.Theme.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Theme.Name" class="control-label">Name </label>
        <input asp-for="@Model.Theme.Name" class="form-control" />
        <span asp-validation-for="@Model.Theme.Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Theme.Description" class="control-label">Description</label>
        <input asp-for="@Model.Theme.Description" class="form-control" />
        <span asp-validation-for="@Model.Theme.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Theme.ImageName" class="control-label"> ImageName </label>
        <input asp-for="@Model.Theme.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Theme.ImageName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>