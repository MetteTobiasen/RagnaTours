@page
@model RagnaTours.Pages.Exhibition.CreateExhibitionModel
@{
    ViewData["Title"] = "CreateExhibition";
}

<h1>CreatePizza</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Exhibition.Id" class="control-label"> Id </label>
        <input asp-for="@Model.Exhibition.Id" class="form-control" />
        <span asp-validation-for="@Model.Exhibition.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Exhibition.Name" class="control-label">Name </label>
        <input asp-for="@Model.Exhibition.Name" class="form-control" />
        <span asp-validation-for="@Model.Exhibition.Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Exhibition.Description" class="control-label">Description</label>
        <input asp-for="@Model.Exhibition.Description" class="form-control" />
        <span asp-validation-for="@Model.Exhibition.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Exhibition.ImageName" class="control-label"> ImageName </label>
        <input asp-for="@Model.Exhibition.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Exhibition.ImageName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
